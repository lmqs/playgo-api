{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "rootDirs": ["src", "tests"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "baseUrl": "src",
    "sourceMap": true,
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": ["src", "tests"],
  "exclude": []
}
