{
  "compilerOptions": {
    "target": "es2019",                                  
    "lib": ["es6"],                                      
    "module": "commonjs",                                
    "rootDir": "src",                                    
    "resolveJsonModule": true,                           
    "allowJs": true,                                     
    "outDir": "build",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "baseUrl": "src",
    },
    "include": ["./src/**/*"],
    "exclude": ["build/**/*"]
  }
